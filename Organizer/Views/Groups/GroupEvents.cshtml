@model Organizer.ViewModels.GroupEventsViewModel

@{
    ViewBag.Title = "GroupEvents";
}

<h2>GroupEvents</h2>

@if (Model.UserIsAdmin)
{
    <p>
        @Html.ActionLink("Create new Event", "CreateEvent", new { id = Model.GroupId })
    </p>
}
    <div style="background-color: ghostwhite">
      <table class="table">
        <tr>
          <th>
            Title
          </th>
          <th>
            Start date
          </th>
          <th>
            End date
          </th>
          <th></th>
        </tr>

        @foreach (var item in Model.GroupEvents)
        {
          <tr>
            <td>
              @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
              @if (Model.UserIsAdmin)
              {
                @Html.ActionLink("Delete event", "DeleteEvent", new { id = item.Id, groupId = Model.GroupId })
              }
            </td>
          </tr>
        }

      </table>
      </div>