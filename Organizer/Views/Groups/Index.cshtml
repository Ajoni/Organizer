@model Organizer.ViewModels.GroupsIndexViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Groups</h2>

<p>
    @Html.ActionLink("Find a group", "Search")
</p>
<p>
    @Html.ActionLink("Create New", "Create")
</p>

<h2>Groups you created</h2>
<table class="table">
    <tr>
        <th>
            Group Owner
        </th>
        <th>
            Title
        </th>
        <th>
            Tags
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.OwnGroups)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Owner.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tags)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
    }
</table>

