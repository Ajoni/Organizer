@model IEnumerable<Organizer.Models.ApplicationUser>
@{
    ViewBag.Title = "ListObservers";
}

<h2>ListObservers</h2>

<div style="background-color: ghostwhite">
  <table class="table">
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.UserName)
      </th>
      <th></th>
    </tr>

    @foreach (var item in Model)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
          @Html.ActionLink("Details", "Details", "User", new { id = item.Id }, null) |
          @Html.ActionLink("Observe", "Observe", "User", new { id = item.Id }, null)
        </td>
      </tr>
    }

  </table>
  </div>