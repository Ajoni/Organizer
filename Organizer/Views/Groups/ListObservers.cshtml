@model IEnumerable<Organizer.Models.ApplicationUser>
@{
    ViewBag.Title = "ListObservers";
}

<h2>ListObservers</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Observe", "Observe", new { id = item.Id })
            </td>
        </tr>
    }

</table>