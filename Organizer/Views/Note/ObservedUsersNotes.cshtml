@model IEnumerable<Organizer.Models.Note>
@{
    ViewBag.Title = "ObservedUsersNotes";
}

<h2>ObservedUsersNotes</h2>
<div style="background-color: ghostwhite">
  <table class="table">
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.Content)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Visibility)
      </th>
      <th></th>
    </tr>

    @foreach (var item in Model)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.Content)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Visibility)
        </td>
        <td>
          @Html.ActionLink("Details", "Details", new { id = item.Nr }) |
        </td>
      </tr>
    }

  </table>
  </div>