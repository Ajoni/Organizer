@model IEnumerable<Organizer.Models.ApplicationUser>
@{
    ViewBag.Title = "ObservingUsers";
}

<h2>ObservingUsers</h2>
<div style="background-color: ghostwhite">
  <table class="table">
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.UserName)
      </th>
      <th></th>
    </tr>

    @foreach (var item in Model)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
          @Html.ActionLink("Details", "Details", new { id = item.Id }) |
          @Html.ActionLink("Observe", "Observe", new { id = item.Id })
        </td>
      </tr>
    }

  </table>
  </div>