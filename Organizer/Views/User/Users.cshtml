@model Organizer.Models.ApplicationUser

@{
    ViewBag.Title = "Users";
}

<h2>Users</h2>

<p>
    @Html.ActionLink("Find user", "Find")
</p>

<h2>Users you're observing</h2>
<div style="background-color: ghostwhite">
  <table class="table">
    <tr>
      <th>
        User name
      </th>
      <th></th>
    </tr>

    @foreach (var item in Model.UserObservations)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
          @Html.ActionLink("Details", "Details", new { id = item.Id }) |
          @Html.ActionLink("Stop observing", "DeleteObservation", new { id = item.Id })
        </td>
      </tr>
    }
  </table>
  </div>
  <h2>Users who observe you</h2>
  <div style="background-color: ghostwhite">
    <table class="table">
      <tr>
        <th>
          User name
        </th>
        <th></th>
      </tr>

      @foreach (var item in Model.ObservingUsers)
      {
        <tr>
          <td>
            @Html.DisplayFor(modelItem => item.Email)
          </td>
          <td>
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Observe", "Observe", new { id = item.Id })
          </td>
        </tr>
      }
    </table>
    </div>